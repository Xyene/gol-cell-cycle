/**
 * Tudor Brindus
 * 4 February 2015
 * ICS3U1
 * Submitted to: Mrs. Strelkovska
 * <p>
 * Prints some data - a cow, a face and personal info to stdio.
 */
public class PrintingExercise {
    public static void main(String[] argv) {
        HappyFacePrinter.main(argv);
        System.out.println();
        CowPrinter.main(argv);
        System.out.println();
        MyProfileInfoPrinter.main(argv);

    }
    /**
     * Tudor Brindus
     * 4 February 2015
     * ICS3U1
     * Submitted to: Mrs. Strelkovska
     * <p>
     * Prints an ASCII cow to stdio.
     */
    public static class CowPrinter {
        public static void main(String[] argv) {
            System.out.println(
                    "          '__'\n" +
                    "          (oo)\n" +
                    "  +========\\/\n" +
                    " / || %%% ||\n" +
                    "*  ||-----||\n" +
                    "   \"\"     \"\""
            );
        }
    }

    /**
     * Tudor Brindus
     * 4 February 2015
     * ICS3U1
     * Submitted to: Mrs. Strelkovska
     * <p>
     * Prints an ASCII happy face to stdio.
     */
    public static class HappyFacePrinter {
        public static void main(String[] argv) {
            System.out.println("     *****       ");
            System.out.println("   *       *     ");
            System.out.println("  *  _   _  *    ");
            System.out.println(" *   o   o   *   ");
            System.out.println("*      |      *  ");
            System.out.println("*      +      *  ");
            System.out.println(" *   \\___/   *  ");
            System.out.println("  *         *    ");
            System.out.println("     *****       ");
        }
    }

    /**
     * Tudor Brindus
     * 4 February 2015
     * ICS3U1
     * Submitted to: Mrs. Strelkovska
     * <p>
     * Prints my student info to stdio.
     */
    public static class MyProfileInfoPrinter {
        public static void main(String[] argv) {
            System.out.println("Tudor Brindus");
            System.out.println("ICS3U1-02 - Introduction to Computer Science");
            System.out.println("\tDon Mills Collegiate Institute");
        }
    }
}
